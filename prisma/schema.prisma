// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  email         String     @unique
  name          String
  department    String
  year          Int
  password      String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  months        Month[]    @relation("userMonth")
  role          Role       @default(USER)
  payments      Payments[]
  expenses      Expense[]
  messSecretary Month[]    @relation("messSecretary")
  refunds       Refunds[]
}

model Month {
  id              Int         @id @default(autoincrement())
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  startDate       DateTime    @default(now())
  endDate         DateTime
  feastDate       DateTime?
  messFee         Float       @default(3000)
  messCutCharge   Float
  messSecretaries User[]      @relation("messSecretary")
  users           User[]      @relation("userMonth")
  expenses        Expense[]
  payments        Payments[]
  messBreaks      messBreak[]
  refunds         Refunds[]
}

model Expense {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Purpose   String
  amount    Float
  feast     Boolean?
  monthId   Int
  month     Month    @relation(fields: [monthId], references: [id])
  payedById String
  payedBy   User     @relation(fields: [payedById], references: [id])
}

model Payments {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  amount        Float
  monthId       Int
  month         Month    @relation(fields: [monthId], references: [id])
  transactionID Int
}

model Refunds {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  amount    Float
  monthId   Int
  month     Month    @relation(fields: [monthId], references: [id])
}

model messBreak {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  reason    String
  startDate DateTime
  endDate   DateTime
  monthId   Int
  month     Month    @relation(fields: [monthId], references: [id])
}

enum Role {
  ADMIN
  SEC
  USER
  COOK
}
